<div class="container justify-content-center align-items-center ">
  <div class="skillcard d-flex" style="width: 100%; max-width: 900px">

    <div class="row no-gutters">
      <div class="col-md-4">
        <div class="card-img-top" style="height: 100%; overflow: hidden; border-radius: 2em 0 0 2em;object-fit: cover;">
          <% if @skill.photo.attached? %>
            <%= cl_image_tag @skill.photo.key, class: "img-fluid rounded-left" %>
          <% else %>
            <%= cl_image_tag("https://res.cloudinary.com/dnx6ly8vl/image/upload/v1685450930/default_fqx7cj.jpg", class: "img-fluid rounded-left", style: "object-fit: cover;") %>
          <% end %>
        </div>
      </div>

      <div class="col-md-8 border-0 pt-4">
        <div class="card-body " >
          <h5 class="card-title text-right"><%= @skill.name %></h5>
          <%# add user %>
          <h5 class="card-title text-right "><%= @skill.user["first_name"] %></h5>
          <h6 class="card-subtitle text-right mb-2"><%= @skill.category %></h6>
          <p class="card-text text-right mb-3"><%= @skill.description %></p>
        </div>

        <%# <div class="card-footer bg-transparent text-right mtb-3"> %>
          <div data-controller="toggle" class="mtb-5">
            <button  data-action="click->toggle#fire" class="btn custom">Book</button>
              <%# button_to "Book", class: "btn btn-primary rounded-pill float-right px-5", data_action: "click->toggle#fire"%>
               <%# link_to "Book", new_skill_booking_path(@skill), class: "btn btn-primary rounded-pill float-right px-5" %><br>
              <div data-toggle-target="togglableElement" class="d-none">
                <%= simple_form_for [@skill, @booking] do |f| %>
                  <%= f.input :date, label:'Pick a date',
                            as: :string,
                            input_html: { data: { controller: "datepicker" } } %>
                  <%# f.input :date %>
                  <%# f.association :movie %>
                  <%# f.association :bookmarks %>
                  <%= f.submit "Submit", class: "btn btn-primary" %>
                <% end %>
              </div>
          </div>
        <%# </div> %>
      </div>
    </div>
   <div class="">
  <%= link_to '', skills_path, class: "fa-solid fa-arrow-left circle-xmark m-3", style: "color: #4056a1; font-size:200%; text-decoration: none;" %>
</div>
