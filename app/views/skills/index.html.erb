

<div class="cards">
  <% @skills.each do |skill| %>
    <div class="card">
      <div class="card-img">
        <% if skill.photo.attached? %>
          <%= cl_image_tag skill.photo.key, class: "img-fluid", style: "object-fit: cover;" %>
        <% else %>
          <%= cl_image_tag("https://res.cloudinary.com/dnx6ly8vl/image/upload/v1685450930/default_fqx7cj.jpg",
          class: "img-fluid", style: "object-fit: cover;") %>
        <% end %>
      </div>
      <div class="card-body">
        <h5 class="card-title"><%= skill.name %></h5>
        <%# add user-avatar %>
        <h5 class="card-title"><%= skill.user["first_name"] %></h5>
        <h6 class="card-subtitle"><%= skill.category %></h6>
        <button class="btn btn-custom"><%= link_to "Details", skill_path(skill), class: "link" %></button>
      </div>
    </div>
  <% end %>
</div>

<button type="button" class="btn btn-custom floating"><%= link_to '', new_skill_path, class: "link fa-solid fa-plus" %></button>
