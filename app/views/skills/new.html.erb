<h1>Add a new skill</h1>
<p>Find me in app/views/skills/new.html.erb</p>

<%= simple_form_for(@skill) do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :category, collection: %w['Art', 'Music', 'Craftmanship', 'Language'] %>
  <%= f.input :photo, as: :file %>
  <%= f.submit %>
<% end %>
